{% extends 'base.html.twig' %}

{% block title %}Présence{% endblock %}

{% block body %}
    <h1>Présence</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Date</th>
                <td>{{ presence.dateDay ? presence.dateDay|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Heure d'arrivée</th>
                <td>{{ presence.arrivalHour ? presence.arrivalHour|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Heure de départ</th>
                <td>{{ presence.departureTime ? presence.departureTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Enfant</th>
                <td>{{ presence.child.name }} {{ presence.child.firstName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_presence_index') }}">Retour à la liste</a>

    <a href="{{ path('app_presence_edit', {'id': presence.id}) }}">Modifier</a>

    {{ include('presence/_delete_form.html.twig') }}
{% endblock %}
