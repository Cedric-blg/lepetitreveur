{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="row g-4">
    <div class="col-12 col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Ajouter un enfant</h5>
                <p class="card-text text-muted mb-4">Créer une nouvelle fiche enfant.</p>
                <a href="{{ path('app_child_new') }}" class="btn btn-primary mt-auto">Ajouter</a>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Ajouter un parent</h5>
                <p class="card-text text-muted mb-4">Créer un nouveau parent.</p>
                <a href="{{ path('app_user_new') }}" class="btn btn-primary mt-auto">Ajouter</a>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Ajouter une présence</h5>
                <p class="card-text text-muted mb-4">Enregistrer la présence d'un enfant.</p>
                <a href="{{ path('app_presence_new') }}" class="btn btn-primary mt-auto">Ajouter</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
