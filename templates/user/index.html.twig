{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 mb-0">User index</h1>
        <a href="{{ path('app_user_new') }}" class="btn btn-primary">Create new</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Password</th>
                    <th>Name</th>
                    <th>First_name</th>
                    <th>Birthday</th>
                    <th>Adress</th>
                    <th>Phone</th>
                    <th>IsVerified</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.password }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.birthday ? user.birthday|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ user.adress }}</td>
                    <td>{{ user.phone }}</td>
                    <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm" role="group">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-outline-secondary">Show</a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Edit</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="11" class="text-center text-muted">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
